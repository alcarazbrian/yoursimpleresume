<section
    class="is-mobile flex-1 h-full overflow-y-auto w-full md:w-2/3 bg-gray-600 p-8 flex justify-center items-start print:p-0 print:m-0 print:h-auto print:w-full print:bg-white print:overflow-visible"
    id="cv-preview"
>
    <article
        class="bg-white w-[210mm] min-h-[297mm] shadow-2xl px-6 py-8 text-gray-800 relative box-border mx-auto origin-top transform scale-75 md:scale-90 lg:scale-100 transition-transform duration-200 print:shadow-none print:m-0 print:transform-none"
        id="resume-paper"
    >
        <header
            id="sec-header"
            class="border-b-2 border-gray-900 pb-3 mb-5 hidden"
        >
            <h1
                id="out-full-name"
                class="text-3xl font-bold text-gray-900 uppercase tracking-tight mb-1 hidden"
            >
            </h1>
            <p
                id="out-job-title"
                class="text-lg text-gray-600 font-medium mb-2 hidden"
            >
            </p>
            <div class="flex flex-wrap gap-y-1 text-sm text-gray-600">
                <div
                    class="flex items-center gap-2 mr-4 hidden"
                    id="out-email-container"
                >
                    <span id="out-email"></span>
                </div>
                <div
                    class="flex items-center gap-2 mr-4 hidden"
                    id="out-phone-container"
                >
                    <span id="out-phone"></span>
                </div>
                <div
                    class="flex items-center gap-2 mr-4 hidden"
                    id="out-location-container"
                >
                    <span id="out-location"></span>
                </div>
                <div
                    class="flex items-center gap-2 mr-4 w-full sm:w-auto hidden"
                    id="out-linkedin-container"
                >
                    <span id="out-linkedin"></span>
                </div>
                <div
                    class="flex items-center gap-2 hidden"
                    id="out-portfolio-container"
                >
                    <span id="out-portfolio"></span>
                </div>
            </div>
        </header>

        <div class="space-y-4 w-full">
            <section id="sec-summary" class="hidden break-inside-avoid">
                <h3
                    class="text-sm font-bold text-gray-900 uppercase tracking-wider border-b border-gray-200 pb-1 mb-2"
                >
                    Professional Profile
                </h3>
                <p
                    id="out-summary"
                    class="text-sm leading-relaxed text-gray-700 whitespace-pre-line hidden"
                >
                </p>
            </section>

            <section id="sec-experience" class="hidden break-inside-avoid">
                <h3
                    class="text-sm font-bold text-gray-900 uppercase tracking-wider border-b border-gray-200 pb-1 mb-3"
                >
                    Work Experience
                </h3>
                <div class="space-y-4" id="experience-list">
                    {
                        [1, 2, 3].map((i) => (
                            <div
                                id={`out-exp-${i}-container`}
                                class="hidden group-has-content break-inside-avoid"
                            >
                                <div class="flex justify-between items-baseline mb-0.5">
                                    <h4
                                        id={`out-exp-${i}-role`}
                                        class="font-bold text-gray-900"
                                    />
                                    <span
                                        id={`out-exp-${i}-date`}
                                        class="text-xs text-gray-600 italic"
                                    />
                                </div>
                                <div
                                    id={`out-exp-${i}-company`}
                                    class="text-xs font-semibold text-gray-700 mb-1"
                                />
                                <p
                                    id={`out-exp-${i}-desc`}
                                    class="text-sm leading-relaxed text-gray-700 whitespace-pre-line"
                                />
                            </div>
                        ))
                    }
                </div>
            </section>

            <section id="sec-education" class="hidden break-inside-avoid">
                <h3
                    class="text-sm font-bold text-gray-900 uppercase tracking-wider border-b border-gray-200 pb-1 mb-3"
                >
                    Education
                </h3>
                <div class="space-y-3">
                    {
                        [1, 2, 3].map((i) => (
                            <div
                                id={`out-edu-${i}-container`}
                                class="hidden break-inside-avoid"
                            >
                                <div class="flex justify-between items-baseline mb-0.5">
                                    <h4
                                        id={`out-edu-${i}-degree`}
                                        class="font-bold text-gray-900"
                                    />
                                    <span
                                        id={`out-edu-${i}-date`}
                                        class="text-xs text-gray-600 italic"
                                    />
                                </div>
                                <div
                                    id={`out-edu-${i}-school`}
                                    class="text-sm text-gray-700"
                                />
                            </div>
                        ))
                    }
                </div>
            </section>

            <section class="grid grid-cols-2 gap-6 break-inside-avoid">
                <div id="sec-skills" class="hidden">
                    <h3
                        class="text-sm font-bold text-gray-900 uppercase tracking-wider border-b border-gray-200 pb-1 mb-2"
                    >
                        Skills
                    </h3>
                    <p
                        id="out-skills"
                        class="text-sm leading-relaxed text-gray-700"
                    >
                    </p>
                </div>
                <div id="sec-languages" class="hidden">
                    <h3
                        class="text-sm font-bold text-gray-900 uppercase tracking-wider border-b border-gray-200 pb-1 mb-2"
                    >
                        Languages
                    </h3>
                    <p
                        id="out-languages"
                        class="text-sm leading-relaxed text-gray-700"
                    >
                    </p>
                </div>
            </section>
        </div>

        <!-- <footer class="absolute bottom-3 left-0 w-full text-center print:block">
            <p class="text-[10px] text-gray-400">Designed by Brian Alcaraz</p>
        </footer> -->
    </article>
</section>

